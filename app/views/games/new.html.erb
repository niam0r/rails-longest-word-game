<div class="text-center">
  <h1>The longest word game</h1>

  <% @letters.each do |letter| %>
    <div class="btn btn-primary">
      <%= letter  %> </p>
    </div>
  <% end %>

  <form action="/score" method="POST" class="form-inline">
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="time" value="<%= Time.now %>">
    <input type="hidden" name="letters" value="<%= @letters %>">

    <div class="form-group">
      <input type="text" name="attempt" placeholder="type in your word" class="form-control">
      <input type="submit" value="Play!" class="btn btn-primary">
    </div>
  </form>

</div>

